# 🚀 FRONTUNA PRODUCTION ENVIRONMENT
# Copy this to .env and fill in your actual values

# 🗄️ DATABASE (Neon)
DATABASE_URL="postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/frontuna_db?sslmode=require"

# 🔐 JWT SECRETS (Generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secure-32-character-secret-key-here-change-this"
JWT_REFRESH_SECRET="different-super-secure-32-character-secret-here-change-this"

# ⏰ TOKEN EXPIRY
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="45d"

# 🌐 CORS & FRONTEND
CORS_ORIGIN="https://frontuna.com,https://frontuna-frontend-app.vercel.app"
FRONTEND_URL="https://frontuna.com"

# 📧 EMAIL (Production SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="noreply@frontuna.ai"
SMTP_PASS="your-gmail-app-password-here"
EMAIL_FROM="Frontuna AI <noreply@frontuna.ai>"

# 🔧 SERVER CONFIG
NODE_ENV="production"
PORT="3000"

# 🤖 OPENAI (Optional)
OPENAI_API_KEY="sk-your-openai-key-here"

# 📊 LOGGING
LOG_LEVEL="info"

# 🛡️ SECURITY
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
